{
    "name": "Rust",
    "image": "mcr.microsoft.com/devcontainers/rust:1-1-bullseye",
    "features": {
        "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "rust-lang.rust-analyzer",
                "vadimcn.vscode-lldb",
                "tamasfe.even-better-toml",
                "fill-labs.dependi",
                "Dagger.dagger"
            ]
        }
    },
    "postCreateCommand": "sudo chmod +x ./.devcontainer/post_create_command.sh && ./.devcontainer/post_create_command.sh"
}